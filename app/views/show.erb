
<div class = "container">

  <img class= "displayed img-clr" src="<%= @image.url %>" alt="random photo" />

<% if @user.captions.find_by(image_id: @image.id) %>
<% else %>
<div class="form-group text_fit">
    <form action="/images/<%=@image.id%>/captions/new" method="post">
    <textarea placeholder="Enter your caption" class="form-control" name="text"></textarea>
    <div class ="btn-form">
        <input name="image_id" value='<%= @image.id %>' type='hidden'/>
        <button class = "btn1 btn1-primary btn1-lg outline ">CAPTION</button>
      </div>
    </form>
</div>
<% end %>



<% @image.captions.each do |caption| %>

  <h3><%= caption.text %> <small>(by: user1)</small></h3>
  <p>
        <%= caption.created_at %>

            </p>
            <p> TESTING TEXT</p>
    <% if @user.votes.find_by(caption_id: caption.id) %>
    <% else %>
    <form method="post" action='/captions/vote/<%= caption.id %>'>
    <button>UPVOTE!</button>
    </form>
    <% end %>


<% end %>

</div>
